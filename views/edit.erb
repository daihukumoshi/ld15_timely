<link rel="stylesheet" href="/assets/css/white.css">
<div class="whole">
<div class="content">
    <h1>タスク編集</h1>
    <div class="center">
        <% @task_id %>
        <form action='/task/<%= @task_id %>/edit' method='post'>
            <input type="text" value="<%= Task.find(@task_id).task_name %>" name="task_name" class="edit_center">
            <input type="text" value="<%= Task.find(@task_id).minutes %>" name="minutes" class="edit_center">
            <input type="submit" value="編集" class="button edit_center">
        </form>
        <form action='/task/<%= @task_id %>/delete' method='post' id="form_delete">
            <input type="submit" value="削除" class="button edit_center">
        </form>
    </div>
</div>
</div>